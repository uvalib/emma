<%# app/views/search/retrieval.html.erb -%>
<%-
  # Fall-back page for a failed Search retrieval.

  view_debug(__FILE__)

  title ||= t('emma.download.label')
  help  ||= nil # %i[search retrieval]
  error ||= 'No URL provided' # TODO: I18n

  unless modal?
    set_page_meta_title(title)
    set_page_description(title)
    set_page_robots(:noindex, :nofollow)
  end

  error &&= t('emma.download.error.server')

-%>

<%= page_heading(title, help: help) %>
<%= page_description_section %>

<%= page_directions_section %>
<p><%= error -%></p>

<%= page_notes_section %>
