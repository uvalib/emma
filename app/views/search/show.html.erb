<%# app/views/search/show.html.erb -%>
<%-
  # A EMMA Unified Search metadata record show page.

  item  ||= @item
  image ||= nil
  title ||= item&.label || t('emma.search.show.title')
  logo  ||= repository_source_logo(item, type: :wide)
  help  ||= nil # help_popup(:search, :show) # TODO: ???

  unless modal?
    set_page_title(title)
    set_page_description(Search: title)
  end

  template_opt = { item: item, image: image }

-%>

<div class="heading container">
  <h1 class="heading"><%= title -%><%= help -%></h1>
  <%= logo %>
</div>

<%= page_description_section %>

<%= page_directions_section %>
<%= render 'search/details', template_opt %>

<%= page_notes_section %>
