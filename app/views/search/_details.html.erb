<%# app/views/search/_details.html.erb -%>
<%-
  # A EMMA Unified Search metadata record listing.

  view_debug(__FILE__)

  item  ||= nil
  image ||= nil
  dec   ||= item && SearchDecorator.new(item, cover: image, **context) or return
  item  ||= dec.object

  add   ||= nil
  level ||= 1
  skip  ||= nil

  skip    = [*skip, :cover]

  append_page_description(
    ISBN:     item.isbn,
    Language: item.dc_language,
    Author:   item.creators.first(3),
  ) unless modal?

-%>

<%= dec.details_element(pairs: add, level: level) do -%>
  <%= dec.cover(placeholder: false) unless skip.include?(:cover) %>
<%- end -%>
