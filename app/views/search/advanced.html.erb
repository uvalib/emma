<%# app/views/search/advanced.html.erb -%>
<%-
  # EMMA Unified Search advanced search page.

  view_debug(__FILE__)

  title ||= t('emma.search.advanced.title')
  help  ||= :search

  unless modal?
    set_page_meta_title(t('emma.search.advanced.label', default: title))
    set_page_description(title)
    set_page_robots(:noindex)
  end

-%>

<%= page_heading(title, help: help) %>
<%= page_description_section(action: :advanced) %>

<%= page_directions_section(action: :advanced) %>
<%= render 'search/form' %>

<%= page_notes_section(action: :advanced) %>
