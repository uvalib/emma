<%# app/views/devise/passwords/new.html.erb -%>
<%-
  # Forgot password page.
  title ||= t('emma.user.passwords.new.label')

  form_opt = {
    as:   resource_name,
    url:  password_path(resource_name),
    html: { method: :post }
  }
  submit_label = t('emma.user.passwords.new.submit')

  unless modal?
    set_page_title(title)
    set_page_description(title)
    set_page_robots(:noindex, :nofollow)
  end
-%>

<h1 class="heading"><%= title -%></h1>

<%= form_for(resource, form_opt) do |f| %>

  <%= render 'devise/shared/error_messages', resource: resource %>

  <div class="field">
    <%= f.label       :email %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: 'email' %>
  </div>

  <div class="actions">
    <%= f.submit submit_label %>
  </div>

<%- end -%>

<%= render 'devise/shared/links' %>

<%-
  abort 'devise/passwords/new - This is not expected to be used'
-%>
