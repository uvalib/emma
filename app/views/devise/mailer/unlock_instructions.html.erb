<%# app/views/devise/mailer/unlock_instructions.html.erb -%>
<%-
  url = unlock_path(@resource, unlock_token: @token)
  set_page_robots(:noindex, :nofollow) unless modal?
-%>

<p>Hello <%= @resource.email -%>!</p>

<p>
  Your account has been locked due to an excessive number of unsuccessful
  sign-in attempts.
</p>

<p>Click the link below to unlock your account:</p>

<p><%= link_to 'Unlock my account', url -%></p>

<%-
  abort 'devise/mailer/unlock_instructions - This is not expected to be used'
-%>
