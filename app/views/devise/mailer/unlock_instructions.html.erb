<%# app/views/devise/mailer/unlock_instructions.html.erb -%>
<%-
  user  ||= current_user
  name  ||= @email || user.email
  token ||= @token

  link_label = 'Unlock my account'
  link_url   = unlock_path(user, unlock_token: token)

  set_page_robots(:noindex, :nofollow) unless modal?

-%>

<p>Hello <%= name -%>!</p>

<p>
  Your account has been locked due to an excessive number of unsuccessful
  sign-in attempts.
</p>

<p>Click the link below to unlock your account:</p>

<p><%= link_to link_label, link_url -%></p>

<%- abort 'devise/mailer/unlock_instructions - NOT EXPECTED TO BE USED' -%>
