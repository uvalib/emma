<%# app/views/org/show.html.erb -%>
<%-
  # Show details of an EMMA member organization.

  view_debug(__FILE__)

  item  ||= @item
  dec     = OrgDecorator.new(item, **context)
  item  ||= dec.object

  help  ||= nil # dec.help_topic
  title ||= nil
  title   = dec.page_heading(title, name: item.long_name)

  unless modal?
    label = "#{dec.page_meta_title} - #{title}"
    set_page_meta_title(label)
    set_page_description(title)
  end

  opt = { dec: dec, org: item }

-%>

<%= page_heading(title, help: help) %>
<%= page_description_section %>

<%= page_directions_section %>
<%= render 'org/details', opt %>
<%= render 'org/users', opt %>

<%= page_notes_section %>
<%= dec.action_list unless modal? %>
