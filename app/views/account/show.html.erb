<%# app/views/account/show.html.erb -%>
<%-
  # Show details of a local EMMA user account.

  view_debug(__FILE__)

  item  ||= @item
  dec     = AccountDecorator.new(item, **context)
  item  ||= dec.object

  title ||= dec.page_heading(name: item.uid)
  help  ||= nil # dec.help_topic

  unless modal?
    label = dec.page_meta_title(default: title)
    set_page_meta_title(label)
    set_page_description(title)
    set_page_robots(:noindex, :nofollow)
  end

  template_opt = { dec: dec }

-%>

<%= page_heading(title, help: help) %>
<%= page_description_section %>

<%= page_directions_section %>
<%= render 'account/details', template_opt %>

<%= page_notes_section %>
<%= dec.action_list unless modal? %>
