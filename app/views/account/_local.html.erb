<%# app/views/account/_local.html.erb -%>
<%-
  # Displays information about the local account.

  user  ||= current_user
  level ||= 1
  skip  ||= nil

  skip = Array.wrap(skip)

  heading =
    if (level == 1) && !skip.include?(:title)
      title ||= 'EMMA Local Account Details' # TODO: I18n
      html_tag((level + 1), title, class: 'account local-heading')
    end

-%>

<%= heading %>

<%= render 'account/details', user: user %>
