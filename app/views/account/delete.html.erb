<%# app/views/account/delete.html.erb -%>
<%-
  # Prompt to remove an existing local EMMA user account entry.

  view_debug(__FILE__)

  list  ||= @list || []
  dec     = AccountsDecorator.new(list, **context)

  title ||= dec.page_heading
  help  ||= nil # dec.help_topic

  unless modal?
    label = dec.page_meta_title(default: title)
    set_page_meta_title(label)
    set_page_description(title)
    set_page_robots(:noindex, :nofollow)
  end

-%>

<%= page_heading(title, help: help) %>
<%= page_description_section %>

<%- if list.blank? -%>

  <%= dec.items_menu %>

<%- else -%>

  <%- list.each_with_index do |item, idx| -%>
    <%= render 'account/selected', item: item, row: idx %>
  <%- end -%>

  <%= page_directions_section %>
  <%= dec.delete_form %>

<%- end -%>

<%= page_notes_section %>
<%= dec.action_list unless modal? %>
