<%# app/views/edition/_list.html.erb -%>
<%-
  # A sequence of periodical Edition entries.

  list   ||= []
  count  ||= list.size
  offset ||= page_offset
  level  ||= 1
  row    ||= level
  skip   ||= nil

  skip = Array.wrap(skip)
  heading =
    unless skip.include?(:title)
      title ||= t('emma.edition.index.title')
      title  += " (#{count} total)" unless skip.include?(:count)
      classes = 'list-heading'
      classes = css_classes(classes, 'empty') if list.blank?
      html_tag(level, h(title), class: classes)
    end

  opt = { offset: offset, level: (level + 1), skip: skip }

-%>

<%= heading %>

<%- if list.blank? -%>
  <%= render 'edition/list_item', opt.merge!(index: -1, row: row) %>
<%- else -%>
  <%- list.each_with_index do |item, idx| -%>
    <%- opt.merge!(index: idx, row: (row + idx), item: item) -%>
    <%= render 'edition/list_item', opt %>
  <%- end -%>
<%- end -%>
