<%# app/views/edition/_list.html.erb -%>
<%-
  # A sequence of periodical Edition entries.

  view_debug(__FILE__)

  list   ||= nil
  dec    ||= EditionsDecorator.new(list, **context)
  list   ||= dec.object

  count  ||= list.size
  offset ||= @page.page_offset
  level  ||= 1
  row    ||= level
  skip   ||= nil

  skip     = [*skip, :thumbnail]
  heading  =
    unless skip.include?(:title)
      title ||= nil
      title   = dec.page_heading(title)
      title  += " (#{count} total)" unless skip.include?(:count)
      classes = 'list-heading'
      classes = css_classes(classes, 'empty') if list.blank?
      html_tag(level, title, class: classes)
    end
  level += 1

-%>

<%= heading %>

<%= dec.render(row: row, offset: offset, level: level, skip: skip) %>
