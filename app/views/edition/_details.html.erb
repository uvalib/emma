<%# app/views/edition/_details.html.erb -%>
<%-
  # A periodical Edition metadata listing.

  item  ||= nil or return
  add   ||= nil
  level ||= 1

  role = ('role="article"'.html_safe if level == 1)

-%>

<div <%= role -%> class="edition-container">
  <%= edition_details(item, pairs: add) %>
</div>
