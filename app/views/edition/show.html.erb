<%# app/views/edition/show.html.erb -%>
<%-
  # A periodical Edition show page.

  item  ||= @item
  title ||= item&.label&.presence || t('emma.edition.show.title')
  help  ||= nil

  unless modal?
    set_page_title(title)
    set_page_description(title)
  end

  template_opt = { item: item }

-%>

<h1 class="heading"><%= title -%><%= help -%></h1>

<%= page_description %>

<%= render 'edition/details', template_opt %>
