<%# app/views/edition/show.html.erb -%>
<%-
  # A periodical Edition show page.

  view_debug(__FILE__)

  item  ||= @item
  dec     = EditionDecorator.new(item, **context)
  item  ||= dec.object

  help  ||= nil # dec.help_topic
  title ||= item.try(:label).presence
  title   = dec.page_heading(title)

  unless modal?
    label = "#{dec.page_meta_title} - #{title}"
    set_page_meta_title(label)
    set_page_description(title)
  end

  opt = { dec: dec }

-%>

<%= page_heading(title, help: help) %>
<%= page_description_section %>

<%= page_directions_section %>
<%= render 'edition/details', opt %>

<%= page_notes_section %>
