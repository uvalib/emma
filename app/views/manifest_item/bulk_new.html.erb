<%# app/views/manifest_item/bulk_new.html.erb -%>
<%-
  # Prompt for a file to create multiple rows.

  view_debug(__FILE__)

  dec     = ManifestItemsDecorator.new(**context)

  help  ||= dec.help_topic
  title ||= nil
  name  ||= nil
  title   = dec.page_title(title, name: name)

  logo  ||= repository_source_logo

  unless modal?
    label = dec.page_meta_title
    set_page_meta_title(label)
    set_page_description(title)
  end

-%>

<%= page_heading(title, help: help, logo: logo) %>
<%= page_description_section %>

<%= page_directions_section %>
<%= dec.bulk_op_form %>
<%= dec.bulk_op_results %>

<%= page_notes_section %>
<%= dec.action_list unless modal? %>
