<%# app/views/manifest_item/_fallback.html.erb -%>
<%-
  # Fall-back error page for a failed ManifestItem action.

  view_debug(__FILE__)

  item   ||= @item || params[:id]
  item     = item.id if item.respond_to?(:id)

  action ||= params[:action]
  title  ||= t("emma.manifest_item.#{action}.title", default: nil)
  title  ||= t("emma.manifest_item.#{action}.label", default: nil)
  title  ||= t('emma.manifest_item.label')
  error  ||= t("emma.manifest_item.#{action}.failure", id: item, default: nil)
  error  ||= "ERROR record #{item}"

  unless modal?
    set_page_meta_title(title)
    set_page_description(title)
  end

  error = (html_tag(:p, error) unless error.blank? || (error == :none))

-%>

<%= page_heading(title) %>
<%= page_description_section %>

<%= page_directions_section %>
<%= error %>

<%= page_notes_section %>
