<%# app/views/reading_list/_list.html.erb -%>
<%-
  # A list of Reading Lists.
  list   ||= []
  count  ||= list.size
  offset ||= page_offset
  skip   ||= nil

  skip = Array.wrap(skip)
  heading =
    unless skip.include?(:title)
      title ||= t('emma.reading_list.index.title')
      title  += " (#{count})" unless skip.include?(:count)
      classes = 'list-heading'
      classes = css_classes(classes, 'empty') if list.blank?
      content_tag(:h2, h(title), class: classes)
    end
-%>

<%= heading %>

<%- if list.present? -%>
  <%- list.each_with_index do |item, idx| -%>
    <%= render 'reading_list/entry', index: idx, item: item, offset: offset %>
  <%- end -%>
<%- else -%>
  <%= render 'reading_list/entry', index: -1 %>
<%- end -%>
