<%# app/views/reading_list/index.html.erb -%>
<%-
  # Reading Lists results page.
  title ||= t('emma.reading_list.index.title')
  list  ||= reading_list_list
  count ||= total_items
  row   ||= 1

  terms = search_terms
  applied_terms, top_controls, bottom_controls =
    index_controls(terms, count: count, row: row)
  row += [applied_terms, top_controls].compact.size

  unless modal?
    set_page_title(t('emma.reading_list.index.label', default: title))
    append_page_title('-', list_search_terms(terms)) if terms.present?
    set_page_description(title)
    set_page_robots(:noindex)
  end

  title += " (#{count})" if list.blank?

  template_opt = { list: list, count: count, row: row, skip: :title }
-%>

<h1 class="heading"><%= title -%></h1>

<div class="reading_list-list">
  <%= applied_terms %>
  <%= top_controls %>
  <%= render 'reading_list/list', template_opt %>
  <%= bottom_controls if list.present? %>
</div>
