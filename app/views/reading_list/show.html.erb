<%# app/views/reading_list/show.html.erb -%>
<%-
  # A Reading List show page.

  item  ||= @item
  list  ||= page_items
  count ||= total_items
  title ||= item&.label || t('emma.reading_list.show.title')
  help  ||= nil

  unless modal?
    set_page_title(title)
    set_page_description(Title: title)
  end

  template_opt = { item: item, list: list, count: count }

-%>

<h1 class="heading"><%= title -%><%= help -%></h1>

<%= page_description %>

<%= render 'reading_list/details', template_opt %>
