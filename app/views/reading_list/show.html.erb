<%# app/views/reading_list/show.html.erb -%>
<%-
  # A Reading List show page.

  view_debug(__FILE__)

  item  ||= @item
  list  ||= @page.page_items
  dec     = ReadingListDecorator.new(item, titles: list, **context)
  item  ||= dec.object

  help  ||= nil # dec.help_topic
  title ||= item.try(:label).presence
  title   = dec.page_heading(title)

  count ||= @page.total_items

  unless modal?
    label = "#{dec.page_meta_title} - #{title}"
    set_page_meta_title(label)
    set_page_description(Title: title)
  end

  template_opt = { dec: dec, count: count }

-%>

<%= page_heading(title, help: help) %>
<%= page_description_section %>

<%= page_directions_section %>
<%= render 'reading_list/details', template_opt %>

<%= page_notes_section %>
