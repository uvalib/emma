<%# app/views/reading_list/new.html.erb -%>
<%-
  # New Reading List form.

  # NOTE: Currently this is a fall-back in case there was a problem with the
  # link to Bookshare.  Normally, it would only be seen if going directly to
  # the EMMA endpoint.

  title ||= t('emma.reading_list.new.title')

  click_to =
    if can?(:new, ReadingList)
      'Click %s to' % link_to_action('here')
    else
      'User %s cannot' % current_user.to_s.inspect
    end.html_safe

  unless modal?
    set_page_title(title)
    set_page_description(title)
    set_page_robots(:noindex, :nofollow)
  end
-%>

<h1 class="heading"><%= title -%></h1>

<p><%= click_to -%> add a reading list.</p>
