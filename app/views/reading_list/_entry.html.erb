<%# app/views/reading_list/_entry.html.erb -%>
<%-
  # A single Reading List list entry.
  item   ||= nil
  index  ||= nil
  return unless item || index

  offset ||= page_offset
  add    ||= {}
  level  ||= 2
  row    ||= 1
  skip   ||= nil

  skip = [*skip, :thumbnail].uniq
  add  = add.merge(index: index, row: row)
  opt  = { index: index, offset: offset, level: level, row: row, skip: skip }
-%>

<%= list_entry_number(item, opt)       unless skip.include?(:number) %>
<%= rl_thumbnail(item, **opt, link: true) unless skip.include?(:thumbnail) %>
<%= reading_list_list_entry(item, add) %>
