<%# app/views/manifest/edit.html.erb -%>
<%-
  # Modify an existing bulk operations manifest.

  view_debug(__FILE__)

  item  ||= @item
  dec     = ManifestDecorator.new(item, **context)
  item  ||= dec.object

  help  ||= dec.help_topic
  title ||= dec.page_heading(name: item.name)
  title   = title.strip.delete_suffix(':')

  unless modal?
    label = title
    set_page_meta_title(label)
    set_page_description(title)
  end

  opt = { dec: dec }

-%>

<%- if true?(params[:record_only]) -%>

  <%= page_heading(title, help: help) %>
  <%= page_description_section %>

  <%= page_directions_section %>
  <%= dec.model_form %>

<%- else -%>

  <%= dec.manifest_page_heading(help: help) %>
  <%= page_description_section %>

  <%= page_directions_section %>
  <%= render 'manifest/grid', opt %>

  <%= page_notes_section %>
  <%= dec.action_list unless modal? %>

<%- end -%>
