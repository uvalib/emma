<%# app/views/upload/edit.html.erb -%>
<%-
  # Prompt to modify an existing file entry.

  title ||= t('emma.upload.edit.title')
  item  ||= @item
  repo  ||= item&.repository
  logo  ||= repository_source_logo(repo)
  help  ||= help_popup(:upload, :edit)

  unless modal?
    set_page_title(title)
    set_page_description(title)
    set_page_robots(:noindex, :nofollow)
  end

-%>

<%= page_heading(title, help: help, logo: logo) %>
<%= page_description_section %>

<%- if item.blank? -%>

  <%= upload_items_menu %>

<%- else -%>

  <%= page_directions_section %>
  <%= upload_form(item, action: :edit) %>
  <%= upload_preview %>

<%- end -%>

<%= page_notes_section %>
<%= page_action_list unless modal? %>
