<%-
  # Select existing entries which contain files to operate on.

  action ||= params[:action]
  user   ||= @user

  prompt =
    if user
      'Select an EMMA entry you created' # TODO: I18n
    else
      'Select an existing EMMA entry' # TODO: I18n
    end

-%>

<%= upload_items_menu(action: action, user: user, prompt: prompt) %>
