<%# app/views/upload/bulk_delete.html.erb -%>
<%-
  # Prompt for a data file to direct the removal of multiple submissions.

  title ||= t('emma.upload.bulk_delete.title')
  logo  ||= repository_source_logo
  list  ||= @list
  force ||= force_delete
  help  ||= nil # TODO: ???

  unless modal?
    set_page_title(title)
    set_page_description(title)
    set_page_robots(:noindex, :nofollow)
  end

-%>

<div class="heading container">
  <h1 class="heading"><%= title -%><%= help -%></h1>
  <%= logo %>
</div>
<%= upload_description %>

<%= upload_directions %>
<%= bulk_delete_form(force: force, ids: list) %>
<%= bulk_upload_results %>

<%= upload_notes %>
<%= upload_action_list unless modal? %>
