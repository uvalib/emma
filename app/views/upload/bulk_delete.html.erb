<%# app/views/upload/bulk_delete.html.erb -%>
<%-
  # Prompt for a data file to direct the removal of multiple submissions.

  view_debug(__FILE__)

  list  ||= @list
  dec     = UploadsDecorator.new(list: list, **context)

  title ||= dec.page_heading
  help  ||= nil # dec.help_topic
  logo  ||= repository_source_logo
  help  ||= dec.help_topic

  unless modal?
    label = dec.page_meta_title(default: title)
    set_page_meta_title(label)
    set_page_description(title)
    set_page_robots(:noindex, :nofollow)
  end

-%>

<%= page_heading(title, help: help, logo: logo) %>
<%= page_description_section %>

<%= page_directions_section %>
<%= dec.bulk_op_form %>
<%= dec.bulk_op_results %>

<%= page_notes_section %>
<%= dec.action_list unless modal? %>
