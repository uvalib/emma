<%# app/views/upload/_entry.html.erb -%>
<%-
  # Display an uploaded entry.

  # @type [Model, nil] item
  item   ||= @item
  index  ||= nil
  return unless item || index

  group  ||= (item.state_group if item.is_a?(Upload))
  offset ||= page_offset
  add    ||= {}
  level  ||= 2
  row    ||= 1
  skip   ||= nil

  skip = [*skip, :thumbnail].uniq
  opt  = { index: index, row: row, group: group }
  add  = add.merge(opt)
  opt.merge!(offset: offset, level: level, skip: skip)

-%>

<%= upload_list_entry_number(item, opt) unless skip.include?(:number) %>
<%= thumbnail(item, **opt, link: true)  unless skip.include?(:thumbnail) %>
<%= upload_list_entry(item, add) %>
