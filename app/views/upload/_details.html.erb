<%# app/views/upload/_details.html.erb -%>
<%-
  # A listing of an upload entry details.

  view_debug(__FILE__)

  item  ||= nil
  image ||= nil
  dec   ||= item && UploadDecorator.new(item, cover: image, **context)
  return unless dec

  level ||= 1
  skip  ||= nil

  opt   ||= {}

-%>

<%= dec.details_container(level: level, skip: skip, **opt) %>
