<%# app/views/upload/_details.html.erb -%>
<%-
  # A listing of an upload entry details.

  view_debug(__FILE__)

  item  ||= nil
  image ||= nil
  dec   ||= item && UploadDecorator.new(item, cover: image, **context) or return

  add   ||= nil
  level ||= 1
  skip  ||= nil

  skip    = [*skip]

-%>

<%= dec.details_element(pairs: add, level: level) do -%>
  <%= dec.cover(placeholder: false) unless skip.include?(:cover) %>
<%- end -%>
