<%# app/views/upload/check.html.erb -%>
<%-
  # Display result of checking for updated Upload submission status.

  view_debug(__FILE__)

  # @type [Array<String>]
  list  ||= @list

  cfg   ||= current_config_page_section
  help  ||= nil # %i[upload check]
  title ||= cfg[:title]

  error ||= config_term(:upload, :invalid_id)

  unless modal?
    set_page_meta_title(title)
    set_page_description(title)
  end

-%>

<%= page_heading(title, help: help) %>
<%= page_description_section %>

<%- if list.blank? -%>

  <p><%= error -%></p>

<%- else -%>

  <%= page_directions_section %>
  <%- list.each do |item| -%>
    <p><%= item -%></p>
  <%- end -%>

<%- end -%>

<%= page_notes_section %>
