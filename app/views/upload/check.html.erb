<%# app/views/upload/check.html.erb -%>
<%-
  # Display result of checking for updated Upload submission status.

  title ||= t('emma.upload.check.title')
  list  ||= @list
  error ||= 'Invalid identifier' # TODO: I18n
  help  ||= nil

  unless modal?
    set_page_title(title)
    set_page_description(title)
    set_page_robots(:noindex, :nofollow)
  end

-%>

<h1 class="heading"><%= title -%><%= help -%></h1>

<%= page_description_section %>

<%- if list.blank? -%>

  <p><%= error -%></p>

<%- else -%>

  <%= page_directions_section %>
  <%- list.each do |item| -%>
    <p><%= item -%></p>
  <%- end -%>

<%- end -%>

<%= page_notes_section %>
