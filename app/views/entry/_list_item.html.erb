<%# app/views/entry/_list_item.html.erb -%>
<%-
  # Display an Entry record.

  # @type [Entry, nil] item
  item   ||= @item
  index  ||= nil
  return unless item || index

  group  ||= nil # TODO: was: (item.state_group if item.is_a?(Entry))
  offset ||= page_offset
  add    ||= nil
  level  ||= 2
  row    ||= 1
  skip   ||= nil

  skip = [*skip, :thumbnail].uniq
  opt  = { index: index, row: row, offset: offset, level: level, skip: skip }
  opt.merge!(group: group) if group

-%>

<%= entry_list_item_number(item, **opt) unless skip.include?(:number) %>
<%= thumbnail(item, **opt, link: true)  unless skip.include?(:thumbnail) %>
<%= entry_list_item(item, pairs: add, index: index, row: row, group: group) %>
