<%# app/views/entry/new.html.erb -%>
<%-
  # Prompt to upload a file and create a new EMMA entry.

  view_debug(__FILE__)

  item  ||= @item
  dec     = EntryDecorator.new(item, **context)
  item  ||= dec.object

  title ||= dec.page_heading
  help  ||= dec.help_topic
  repo  ||= item.repository
  logo  ||= repository_source_logo(repo)

  unless modal?
    label = dec.page_meta_title(default: title)
    set_page_meta_title(label)
    set_page_description(title)
    set_page_robots(:noindex, :nofollow)
  end

-%>

<%= page_heading(title, help: help, logo: logo) %>
<%= page_description_section %>

<%= page_directions_section %>
<%= dec.preview %>
<%= dec.model_form %>

<%= page_notes_section %>
<%= dec.action_list unless modal? %>
