<%# app/views/entry/_details.html.erb -%>
<%-
  # A listing of an Entry record details.

  view_debug(__FILE__)

  item  ||= nil
  image ||= nil
  dec   ||= item && EntryDecorator.new(item, cover: image, **context) or return

  add   ||= nil
  level ||= 1
  skip  ||= nil

  skip    = [*skip]

-%>

<%= dec.details_element(pairs: add, level: level) do %>
  <%= dec.cover(placeholder: false) unless skip.include?(:cover) %>
<%- end -%>
