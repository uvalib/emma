  # A table of EMMA submission fields with a count of each unique value.

  list  ||= @list
  name  ||= nil # Not directly from a specific table.
  title ||= 'EMMA Submission Field Value Counts' # TODO: I18n

  unless modal?
    set_page_title(title)
    set_page_description(title)
    set_page_robots(:noindex, :nofollow)
  end

-%>

<h1 class="heading"><%= title -%></h1>

<%= render 'data/fields', fields: list %>
