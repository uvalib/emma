<%# app/views/data/_heading.html.erb -%>
<%-
  # A database table heading.

  view_debug(__FILE__)

  name  ||= nil or return
  list  ||= []

  title ||= name.titleize
  id    ||= nil
  tag   ||= :h2

  count   = positive(list.size - 1) || 0
  number  = "#{count} #{'record'.pluralize(count)}"
  title   = html_span("#{title} (#{name} - #{number})")

  opt = { class: 'database-table-name', id: id }.compact
  append_css!(opt, 'empty') if count.zero?

-%>

<%= html_tag(tag, title, **opt) %>
