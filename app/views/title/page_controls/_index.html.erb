<%# app/views/title/page_controls/_index.html.erb -%>
<%-
  # Page controls on a catalog Title index page for an authorized user.
  actions = page_control_actions(Title, :new)
  return if actions.blank?

  anchor_id = 'index-page-controls'
  skip_nav_prepend(title: anchor_id)

  path_opt = {}
-%>

<div class="label" id="<%= anchor_id -%>"><%= page_controls_label -%>:</div>
<div class="controls"><%= page_controls(*actions, **path_opt) %></div>
