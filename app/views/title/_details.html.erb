<%# app/views/title/_details.html.erb -%>
<%-
  # A catalog Title metadata listing with cover image.

  view_debug(__FILE__)

  item  ||= nil
  image ||= nil
  dec   ||= item && TitleDecorator.new(item, cover: image, **context) or return
  item  ||= dec.object

  level ||= 1
  extra ||= nil
  skip  ||= nil

  unless modal?
    append_page_description(
      Series:   item.seriesTitle,
      ISBN:     item.isbn,
      Language: item.languages&.first(3),
      Author:   item.authors&.first(3),
    )
  end

-%>

<%= dec.details_container(level: level, pairs: extra, skip: skip) %>
