<%# app/views/title/show.html.erb -%>
<%-
  # A Catalog Title show page.

  view_debug(__FILE__)

  item  ||= @item
  image ||= nil
  dec     = TitleDecorator.new(item, cover: image, **context)
  item  ||= dec.object

  title ||= item.label&.presence || dec.page_heading
  help  ||= nil # dec.help_topic

  unless modal?
    label = dec.page_meta_title(default: dec.page_heading)
    set_page_meta_title(label)
    set_page_description(Title: title)
  end

  template_opt = { dec: dec }

-%>

<%= page_heading(title, help: help) %>
<%= page_description_section %>

<%= page_directions_section %>
<%= render 'title/details', template_opt %>

<%= page_notes_section %>
