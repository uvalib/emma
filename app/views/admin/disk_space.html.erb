<%# app/views/admin/disk_space.html.erb -%>
<%-
  # Host machine disk space.

  view_debug(__FILE__)

  help  ||= nil # %i[admin disk_space]
  title ||= t('emma.admin.disk_space.title')

  unless modal?
    label = t('emma.admin.disk_space.label', default: title)
    set_page_meta_title("Admin - #{label}")
    set_page_description(title)
  end

  command = 'df -h'
  command = ["#{command} --sync", command]

-%>

<%= page_heading(title, help: help) %>
<%= page_description_section %>

<%= page_directions_section %>

<%= render 'admin/command', command: command %>

<%= page_notes_section %>
<%= render 'admin/menu' %>
