<%# app/views/admin/processes.html.erb -%>
<%-
  # Host machine processes

  view_debug(__FILE__)

  help  ||= nil # %i[admin processes]
  title ||= t('emma.admin.processes.title')

  unless modal?
    label = t('emma.admin.processes.label', default: title)
    set_page_meta_title("Admin - #{label}")
    set_page_description(title)
  end

  # noinspection SpellCheckingInspection
  command = 'uptime && echo && ps auxww'
  command = ["#{command}k-%cpu,-%mem,+pid", command]

-%>

<%= page_heading(title, help: help) %>
<%= page_description_section %>

<%= page_directions_section %>

<%= render 'admin/command', command: command %>

<%= page_notes_section %>
<%= render 'admin/menu' %>
