<%# app/views/layouts/modal.html.erb -%>
<%-
  # Modal (<iframe>) layout.

  main_id = 'main' # TODO: I18n for 'Main Content'

  set_page_meta_title('Modal Dialog')

-%>
<!DOCTYPE html>
<html lang="<%= page_language -%>" class="modal">

  <head>
    <%= page_meta_title %>
    <%= page_stylesheets %>
    <%= page_script_settings %>
    <%= page_javascripts %>
  </head>

  <body class="<%= page_classes -%>">
    <%= render 'layouts/flash' %>
    <main class="layout-content modal" id="<%= main_id -%>">
      <%= yield %>
    </main>
  </body>

</html>
