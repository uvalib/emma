<%# app/views/layouts/_header.html.erb -%>
<%-
  # Application header.
  skip_nav_bar         ||= false
  skip_search_bar      ||= false
  skip_search_controls ||= false
-%>

<header class="layout-header">
  <%= render 'layouts/banner' %>
  <%= render 'layouts/nav_bar',         skip: skip_nav_bar %>
  <%= render 'layouts/search_bar',      skip: skip_search_bar %>
  <%= render 'layouts/search_controls', skip: skip_search_controls %>
</header>
