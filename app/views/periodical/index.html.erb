<%# app/views/periodical/index.html.erb -%>
<%-
  # Periodicals results page.
  title ||= t('emma.periodical.index.title')
  list  ||= periodical_list
  count ||= total_items
  row   ||= 1

  terms = search_terms
  applied_terms, top_controls, bottom_controls =
    if list.present?
      index_controls(terms, count: count, row: row)
    end
  row += [applied_terms, top_controls].compact.size

  set_page_title(t('emma.periodical.index.label', default: title))
  append_page_title('-', hash_string(terms)) if terms.present?
  set_page_description(title)
  set_page_robots(:noindex)

  title += " (#{count})" if list.blank?

  template_opt = { list: list, count: count, row: row, skip: :title }
-%>

<h1 class="heading"><%= title -%></h1>

<div class="periodical-list">
  <%= applied_terms %>
  <%= top_controls %>
  <%= render 'periodical/list', template_opt %>
  <%= bottom_controls %>
</div>
