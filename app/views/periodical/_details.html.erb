<%# app/views/periodical/_details.html.erb -%>
<%-
  # A Periodical metadata listing with associated editions.

  view_debug(__FILE__)

  item  ||= nil
  list  ||= nil
  dec   ||= item && PeriodicalDecorator.new(item, editions: list, **context) or return
  item  ||= dec.object

  level ||= 1
  extra ||= nil
  skip  ||= nil

  unless modal?
    append_page_description(
      ISSN:     item.issn,
      Language: item.languages&.first(3),
    )
  end

-%>

<%= dec.details_container(level: level, pairs: extra, skip: skip) %>
