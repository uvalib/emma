<%# app/views/member/edit.html.erb -%>
<%-
  # Member edit form.
  title ||= t('emma.member.edit.title')

  set_page_title(title)
  set_page_description(title)
  set_page_robots(:noindex)

  name = current_user.to_s.inspect
  can  = can?(:edit, Member) ? 'can' : 'can NOT'
-%>

<h1 class="heading"><%= title -%></h1>

<p>(User <%= name -%> <%= can -%> modify member information.)</p>

