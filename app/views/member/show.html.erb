<%# app/views/member/show.html.erb -%>
<%-
  # An organization Member show page.

  item  ||= @item
  pref  ||= @preferences
  hist  ||= @history
  title ||= item&.label || t('emma.member.show.title')
  help  ||= nil

  unless modal?
    set_page_title(title)
    set_page_description(title)
    set_page_robots(:noindex)
  end

  add = { EmmaRoles: current_user.role_list.join(', ') }

  template_opt = { item: item, pref: pref, hist: hist, add: add }

-%>

<h1 class="heading"><%= title -%><%= help -%></h1>

<%= page_description_section %>

<%= page_directions_section %>
<%= render 'member/details', template_opt %>

<%= page_notes_section %>
