<%# app/views/member/_details.html.erb -%>
<%-
  # A Member metadata listing.
  item ||= @item
  return if item.blank?

  added_fields = {
    EmmaRoles: current_user.roles.map(&:to_s).join(', ')
  }
-%>

<div class="member-details">
  <%= member_field_values(item, added_fields) %>
</div>

<h2>Preferences</h2>

<%= render 'member/preferences' %>
