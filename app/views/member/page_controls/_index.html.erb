<%# app/views/member/page_controls/_index.html.erb -%>
<%-
  # Page controls on a Member index page for an authorized user.

  actions   = page_control_actions(Member, :new).presence or return
  anchor_id = 'index-page-controls'

  skip_nav_prepend(member: anchor_id) unless modal?

  path_opt = {}

-%>

<div class="label" id="<%= anchor_id -%>"><%= page_controls_label -%>:</div>
<div class="controls"><%= page_controls(*actions, **path_opt) %></div>
