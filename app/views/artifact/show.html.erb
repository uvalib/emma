<%# app/views/artifact/show.html.erb -%>
<%-
  # An Artifact metadata show page.

  item  ||= @item
  title ||= item&.label&.presence || t('emma.artifact.show.title')

  unless modal?
    set_page_title(title)
    set_page_description(title)
  end

  template_opt = { item: item }

-%>

<h1 class="heading"><%= title -%></h1>

<%= render 'artifact/details', template_opt %>
