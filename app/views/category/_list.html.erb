<%# app/views/category/_list.html.erb -%>
<%-
  # Category list.
  list ||= []
  skip ||= nil

  skip = Array.wrap(skip)
  heading =
    unless skip.include?(:title)
      title ||= t('emma.category.index.title')
      unless skip.include?(:count)
        count ||= list.size
        title += " (#{count})"
      end
      content_tag(:h2, h(title), class: 'list-heading')
    end
-%>

<%= heading %>

<%- if list.present? -%>
  <%- list.each_with_index do |item, idx| -%>
    <%= render 'category/entry', index: idx, item: item %>
  <%- end -%>
<%- else -%>
  <%= render 'category/entry', index: -1 %>
<%- end -%>
