<%# app/views/category/_list.html.erb -%>
<%-
  # Category listing.
  list   ||= []
  count  ||= list.size
  offset ||= page_offset
  skip   ||= nil

  skip = Array.wrap(skip)
  heading =
    unless skip.include?(:title)
      title ||= t('emma.category.index.title')
      title  += " (#{count})" unless skip.include?(:count)
      classes = 'list-heading'
      classes = css_classes(classes, 'empty') if list.blank?
      content_tag(:h2, h(title), class: classes)
    end
-%>

<%= heading %>

<%- if list.present? -%>
  <%- list.each_with_index do |item, idx| -%>
    <%= render 'category/entry', index: idx, item: item, offset: offset %>
  <%- end -%>
<%- else -%>
  <%= render 'category/entry', index: -1 %>
<%- end -%>
