// This file holds all of the constants that rely on ERB processing, which
// allows shared settings to be maintained in the Rails application.

/**
 * Asset path for the animated "downloading" GIF.
 *
 * @type {string}
 */
const LOADING_IMAGE =
    "<%= asset_path(ImageHelper::PLACEHOLDER_ASSET) %>";

/**
 * Artifact download progress indicator element CSS class.
 *
 * @type {string}
 */
const ARTIFACT_PROGRESS_CLASS =
    "<%= ArtifactHelper::ARTIFACT_PROGRESS_CLASS %>";

/**
 * Artifact download failure message element CSS class.
 *
 * @type {string}
 */
const ARTIFACT_FAILURE_CLASS =
    "<%= ArtifactHelper::ARTIFACT_FAILURE_CLASS %>";

/**
 * Artifact download button element CSS class.
 *
 * @type {string}
 */
const ARTIFACT_BUTTON_CLASS =
    "<%= ArtifactHelper::ARTIFACT_BUTTON_CLASS %>";

/**
 * Prefix for download failure message labels.
 *
 * @type {string}
 */
const FAILURE_PREFIX =
    "<%= I18n.t('emma.artifact.show.failure.prefix') %>";

/**
 * Failure message for a user-cancelled download.
 *
 * @type {string}
 */
const REQUEST_CANCELLED =
    "<%= I18n.t('emma.artifact.show.failure.cancelled') %>";

/**
 * Unknown download failure.
 *
 * @type {string}
 */
const UNKNOWN_ERROR =
    "<%= I18n.t('emma.artifact.show.failure.unknown') %>";
