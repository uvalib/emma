  # @param [String]                       entry_css
  #
  # @raise [Minitest::Assertion]
  #
  # @return [true]
  #
  # @yield Test code to run while on the page.
  # @yieldparam [String] title
  # @yieldreturn [void]
  #
  def visit_show_page: (Symbol model, ?entry: Capybara::Node::Element|nil, ?index: Integer|Symbol|nil, ?entry_css: String|nil) ?{ (String) -> void } -> true
