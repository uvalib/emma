{
  "name":    "emma",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "@rails/actioncable": "^7.0.4",
    "@rails/ujs":         "^7.0.4",
    "@uppy/core":         "^1.20.0",
    "@uppy/file-input":   "^1.5.2",
    "@uppy/informer":     "^1.6.6",
    "@uppy/progress-bar": "^1.3.30",
    "@uppy/xhr-upload":   "^1.7.5",
    "esbuild":            "^0.15.14",
    "jquery":             "^3.6.1",
    "sass":               "^1.56.1",
    "select2":            "^4.1.0-rc.0",
    "turbolinks":         "^5.2.0"
  },
  "unused-dependencies": {
    "@uppy/aws-s3":               "^1.8.0",
    "@uppy/dashboard":            "^1.21.1",
    "@uppy/drag-drop":            "^1.4.31",
    "@uppy/status-bar":           "^1.9.6",
    "@uppy/thumbnail-generator":  "^1.7.11",
    "uppy":                       "^1.31.0"
  },
  "scripts": {
    "build":     "[ _$DEPLOYMENT = _local -a _$RAILS_ENV != _test ] && OPT='--sourcemap' || OPT='--sourcemap --minify'; esbuild app/assets/javascripts/application.js --outdir=app/assets/builds --bundle $OPT",
    "build:css": "sass app/assets/stylesheets/application.sass.scss app/assets/builds/application.css -I node_modules -I app/assets/stylesheets --source-map-urls=absolute --style=compressed",
    "dev-build":      "esbuild app/assets/javascripts/application.js --outdir=app/assets/builds --bundle --sourcemap",
    "dev-build:css":  "sass app/assets/stylesheets/application.sass.scss app/assets/builds/application.css -I node_modules -I app/assets/stylesheets --source-map-urls=absolute",
    "prod-build":     "esbuild app/assets/javascripts/application.js --outdir=app/assets/builds --bundle --sourcemap --minify",
    "prod-build:css": "sass app/assets/stylesheets/application.sass.scss app/assets/builds/application.css -I node_modules -I app/assets/stylesheets --source-map-urls=absolute --style=compressed"
  }
}
