{
  "name":    "emma",
  "version": "0.0.0",
  "private": true,
  "dependencies": {
    "@rails/ujs":         "^6.1.4-4",
    "@uppy/core":         "^1.20.0",
    "@uppy/file-input":   "^1.5.2",
    "@uppy/informer":     "^1.6.6",
    "@uppy/progress-bar": "^1.3.30",
    "@uppy/xhr-upload":   "^1.7.5",
    "esbuild":            "^0.14.10",
    "jquery":             "^3.6.0",
    "sass":               "^1.46.0",
    "select2":            "^4.0.13",
    "turbolinks":         "^5.2.0"
  },
  "unused-dependencies": {
    "@uppy/aws-s3":               "^1.8.0",
    "@uppy/dashboard":            "^1.21.1",
    "@uppy/drag-drop":            "^1.4.31",
    "@uppy/status-bar":           "^1.9.6",
    "@uppy/thumbnail-generator":  "^1.7.11",
    "uppy":                       "^1.31.0"
  },
  "scripts": {
    "build":     "esbuild app/assets/javascripts/application.js --outdir=app/assets/builds --bundle --sourcemap --minify",
    "build:css": "sass app/assets/stylesheets/application.sass.scss app/assets/builds/application.css -I node_modules -I app/assets/stylesheets --style=compressed",
    "dev-build":      "esbuild app/assets/javascripts/application.js --outdir=app/assets/builds --bundle --sourcemap",
    "dev-build:css":  "sass app/assets/stylesheets/application.sass.scss app/assets/builds/application.css -I node_modules -I app/assets/stylesheets",
    "prod-build":     "esbuild app/assets/javascripts/application.js --outdir=app/assets/builds --bundle --sourcemap --minify",
    "prod-build:css": "sass app/assets/stylesheets/application.sass.scss app/assets/builds/application.css -I node_modules -I app/assets/stylesheets --style=compressed"
  }
}
